<Window x:Class="Music_World.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music_World"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="619*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="Menu" HorizontalAlignment="Left" Height="406" Margin="344,4,0,0" VerticalAlignment="Top" Width="265" Background="{x:Null}" BorderBrush="Black" BorderThickness="1.5" Grid.Column="1">
            <Button x:Name="add_Create" Content="Add/Create" Height="31" Width="72" Background="White" BorderBrush="Black" FontWeight="Bold"/>
            <Button x:Name="Remove" Content="Remove" Height="31" Width="72" BorderBrush="Black" Background="White" FontWeight="Bold"/>
            <Button x:Name="View" Content="View" Height="31" Width="72" Background="White" BorderBrush="Black" FontWeight="Bold"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="2" Width="246"/>
        </Menu>
        <MediaElement x:Name="Media" HorizontalAlignment="Left" Height="91" VerticalAlignment="Top" Width="100" Source="Bow.mp3" Margin="23,159,0,0" RenderTransformOrigin="0.21,0.385" LoadedBehavior="Manual" Grid.Column="1" UnloadedBehavior="Manual"/>
        <Button x:Name="PlayPause" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="55,336,0,0" Height="40" Click="PlayPause_Click" Tag="Pause" Grid.Column="1">
            <Image x:Name="ButtonImage" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="40" Source="assets/Play.png"/>
        </Button>

    </Grid>
</Window>
